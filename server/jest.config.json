{
  "testEnvironment": "node",
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "controllers/**/*.js",
    "middleware/**/*.js",
    "models/**/*.js",
    "utils/**/*.js",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "setupFiles": ["<rootDir>/tests/setup.js"],
  "setupFilesAfterEnv": [],
  "testTimeout": 30000,
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true
}